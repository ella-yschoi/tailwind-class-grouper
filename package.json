{
  "name": "tailwind-class-grouper",
  "displayName": "Tailwind Class Grouper",
  "description": "Group Tailwind CSS classes into readable blocks using clsx.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwind-class-grouper.groupClasses",
        "title": "Tailwind: Group Classes"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0"
  }
}

